<Window x:Class="bondCrunchersUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:bondCrunchersUI"
        mc:Ignorable="d"
        Title="EBond Trader" Height="621.053" Width="639.474">
    <Canvas>
        <Label x:Name="label" Content="Bond Listing:" Canvas.Left="10" Canvas.Top="10" FontSize="16"/>
        <ListView x:Name="bondList" Height="491" Canvas.Top="46" Width="631">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ISIN Number" DisplayMemberBinding="{Binding isin}"/>
                    <GridViewColumn Header="Description" DisplayMemberBinding="{Binding Description}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="btnBookTrade" Content="Book Trade" Canvas.Left="417" Canvas.Top="550" Width="75" Click="BookTrade"/>
        <Button x:Name="btnTradeHistory" Content="Trade History" Canvas.Left="497" Canvas.Top="550" Width="103"/>

    </Canvas>
</Window>
